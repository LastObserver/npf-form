@import "~stylesheets/_variables.styl";

.head__drop-down
	position absolute
	left 0
	right 0
	z-index $header-drop-down_z-index
	opacity 0
	visibility hidden
	transform translateY(50px)
	.g-bg
		position fixed
		left 0
		top 0
		width 100%
		height 100%
		z-index 1
		background #000
		opacity 0.1
	@media screen and (min-width: $screen-sm-min)
		top 0

.head__drop-down.g-active
	margin-top 0
	opacity 1
	transform translateY(0)
	transition-delay 0s
	transition-duration .2s
	transition-property opacity, transform
	transition-timing-function: ease-out
	visibility visible
	box-shadow 0px 40px 40px -40px rgba(0,0,0,0.5)

.drop-down
	box-shadow inset 0 7px 9px -7px rgba(0,0,0,0.4)
	position relative
	z-index 2
	background #fff
	@media screen and (min-width: $screen-sm-min)
		box-shadow none
		background-image url(/local/templates/npfsb/images/drop-oval.jpg)
		background-repeat no-repeat
		background-position 450px  600px
	@media screen and (min-width: $screen-lg-min)
		background-position 640px bottom

.drop-down-content
	position relative
	padding-top 40px
	padding-bottom 50px
	make-row()
	@media screen and (min-width: $screen-sm-min)
		padding-top 75px
		padding-bottom 135px

.drop-down__close
	display none
	position absolute
	right 0
	top 42px
	background url(/local/templates/npfsb/images/drop-close.png) no-repeat
	width 22px
	height 21px

	@media screen and (min-width: $screen-sm-min)
		display block
		right 15px

.drop-down__close:hover
	opacity 0.8
.drop-down__contacts
	make-sm-column(3)
	display none
	@media screen and (min-width: $screen-sm-min)
		display block

.drop-down__menu
	display flex
	flex-direction column
	flex-wrap wrap

	@media screen and (min-width: $screen-sm-min)
		flex-direction row


.drop-down-logo
	img
		display block
		width 100%
.drop-down-phone
	margin-top 45px
.drop-down-phone__name
	text-transform uppercase
	font-size 12px
	color #000
	opacity .5
	letter-spacing .1em
.drop-down-phone__content
	font-size 24px
	margin-top 5px
	font-weight 300
.drop-down-address
	margin-top 65px
.drop-down-address__name
	text-transform uppercase
	font-size 12px
	color #000
	opacity .5
	letter-spacing .1em


.drop-down-address__content
	font-size 14px
	color #3d4349
	line-height 150%
	margin-top 5px
.drop-down-time
	margin-top 20px
.drop-down-time__name
	text-transform uppercase
	font-size 12px
	color #000
	opacity .5
	letter-spacing .1em
.drop-down-time__content
	margin-top 5px
	font-size 14px
	color #3d4349
	width 240px
.drop-down-time-line
	margin-top 5px
.drop-down-time-line__name
	line-height (25/14)
.drop-down-time-line__content
	font-weight 500
.drop-down-social
	margin-top 70px
.drop-down-social__name
	text-transform uppercase
	font-size 12px
	color #000
	opacity .5
	letter-spacing .1em
.drop-down-social__content
	margin-top 5px
	a
		display inline-block
		width 32px
		height 32px
		margin-right 10px
	a:hover
		opacity 0.8

.drop-down-one-menu
	margin-bottom 45px
	make-xs-column(12)
	make-sm-column(6)
	make-lg-column(4)
	text-align center

	padding-left 10px
	padding-right 10px

	@media screen and (min-width: $screen-sm-min)
		text-align left
		padding-left 15px
		padding-right 15px

.drop-down-one-menu__name
	font-size 20px
	color #3d4349
	font-weight 500
	padding-top 5px
	padding-left 10px
	padding-right 10px

	@media screen and (min-width:$screen-sm-min)
		padding-left 0
		padding-right 0
		&._js-accordion__header
			cursor default

.drop-down-one-menu__list
	padding-top 10px

	@media screen and (min-width:$screen-sm-min)
		padding-right 50px

	li
		margin-top 15px
		list-style none
		a
			text-decoration none
			font-size 14px
			color #3d4349
		a:hover
			text-decoration underline
.drop-down-bold-links
	make-sm-column(6)
	make-lg-column(4)
	text-align center

	@media screen and (min-width: $screen-sm-min)
		text-align left

	padding-top 10px
	a
		text-decoration none
		display inline-block
		margin-bottom 40px
		font-size 20px
		color #3d4349
		font-weight 500
		// padding-right 22px
		// background url(/local/templates/npfsb/images/drop-arr.png) no-repeat right center
	a:hover
		text-decoration underline
