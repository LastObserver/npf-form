$header-top = '.npf-header-banner'

{$header-top}
  background-position center
  background-size cover
  background-repeat no-repeat

  &__container
    padding-top 48px
    padding-bottom 75px
    position relative
    min-height 220px

    @media screen and (min-width:$screen-sm-min)
      min-height 260px

  &__subtitle
    color #fff
    text-transform uppercase
    font-size 12px
    letter-spacing .1em
    margin-bottom 10px

    @media screen and (min-width:$screen-sm-min)
      margin-bottom 30px

  &__title
    font-size 34px
    font-weight 200
    line-height (44/34)
    color #fff

    @media screen and (min-width: $screen-sm-min)
      font-size 68px
      line-height unit(72 / @font-size, '')
      letter-spacing -0.01em
      margin-bottom 40px

  &__links
    position absolute
    left 0
    bottom 0
    right 0
    height 60px
    padding 0 15px
    clearfix()

    @media screen and (min-width:$screen-sm-min)
      height 90px

  &__link
    display block
    font-size 17px
    font-weight 500
    height 100%
    text-decoration none
    color #fff
    position relative
    float left
    letter-spacing 0.03em
    line-height 60px
    margin-right 40px
    // padding-bottom 20px

    @media screen and (min-width:$screen-sm-min)
      line-height 90px
      margin-right 48px

    &:hover
      &::before
        content ''
        display block
        left -8px
        right -8px
        bottom 0
        background #fda630
        height 4px
        border-radius 2px 2px 0 0
        position absolute



    &:last-child
        margin-right 0

    &._current
      cursor default
      &::before
        content ''
        display block
        left -8px
        right -8px
        bottom 0
        background #fda630
        height 4px
        border-radius 2px 2px 0 0
        position absolute

  &__icon
    margin-left 14px

    img
      vertical-align middle
