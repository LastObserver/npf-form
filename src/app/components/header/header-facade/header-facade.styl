@import "~stylesheets/_variables.styl";


$facade = '.npf-header-facade'

{$facade}
  color: #fff;
  text-align: center;
  padding: 30px 0 70px;
  background-position center center
  background-repeat no-repeat
  background-size cover

  &__title
    font-size: 68px;
    font-weight: 100;
    line-height: 1.2;
    margin-bottom: 80px;

  &__subtitle
    font-size: 16px;
    font-weight: 500;
    line-height: 4;
    margin-bottom: 100px;
    letter-spacing: .1em;
    text-transform: uppercase;