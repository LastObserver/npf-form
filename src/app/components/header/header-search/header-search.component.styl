@import "~stylesheets/_variables.styl";


.npf-header-search
  background-color $colors-background
  box-shadow 0px 40px 40px -40px rgba(0,0,0,0.5)
  position absolute
  top 0
  left 0
  width 100%
  z-index 2500
  overflow hidden
  opacity 0
  visibility hidden
  transform translateY(-100%)
  transition-property opacity, transform
  transition-delay 0s
  transition-duration .3s
  transition-timing-function ease-out
  padding-top 66px
  padding-bottom 30px

  @media screen and (min-width:$screen-sm-min)
    padding-bottom 60px
    padding-top 185px
    &::after
      content ''
      background-color #1a991a
      border-radius 50%
      display block
      height 457px
      position absolute
      right -200px
      width 457px
      top -200px
      z-index 0

  &._show
    visibility visible
    opacity 1
    transform translateY(0)

  &__close
    right 10px
    top 20px
    cursor pointer
    position absolute
    width 23px
    height 23px
    opacity 0.3

    @media screen and (min-width:$screen-sm-min)
      top 60px
      left 15px

    @media screen and (min-width:$screen-lg-min)
      left 60px


    &:hover
      opacity 1

    &::after,
    &::before
      position absolute
      content ''
      height 30px
      width 2px
      background-color #333
      left 10px

    &::before
      transform rotate(45deg)

    &::after
      transform rotate(-45deg)

  &__search-icon
    display none

    @media screen and (min-width:$screen-sm-min)
      display block
      position absolute
      top 60px
      right 60px
      z-index 100

  &__input-container
    position relative
    margin-bottom 44px
    z-index 1

    @media screen and (min-width:$screen-sm-min)
      margin-bottom 138px

    .npf-input
      font-size 30px
      font-weight 200

      @media screen and (min-width:$screen-sm-min)
        font-size 80px
        font-family 'SeroPro-Extrathin', Ariak, sans-serif
        letter-spacing -.010em

    &._none
      .npf-header-search__hint
        opacity 0

      &:after
        content 'Укажите поисковой запрос'
        color red
        position absolute
        left 0
        bottom 0

  &__hint
    opacity 0.8
    font-size 18px
    font-weight 300
    line-height 30px

  &__heading
    width 100%
    font-size 20px
    font-weight 500
    margin-bottom 44px
    letter-spacing -.015em

    @media screen and (min-width:$screen-sm-min)
      font-size 26px

  &__cards-container
    make-row()

  &__card
    padding-left 10px
    padding-right 10px
    width 290px
    float left

    @media screen and (min-width:$screen-sm-min)
      width 400px
      padding-left 15px
      padding-right 15px

  &__card-content
    background-color #fff
    border-radius 6px
    text-align center
    padding 50px 10px
    height 250px
    overflow hidden

    @media screen and (min-width:$screen-sm-min)
      padding 90px 10px
      height 330px

  &__icon
    width 60px
    height 60px
    margin-bottom 10px
    margin-left auto
    margin-right auto

  &__title
    font-size 20px
    font-weight 500
    line-height ( 30/20 )
    letter-spacing -.015em

  &__descr
    color #000
    font-size 14px
    font-weight 300
    line-height ( 25/14 )
    letter-spacing .020em
