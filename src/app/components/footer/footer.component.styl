@import "~stylesheets/_variables.styl";
.npf-footer
  border-top 1px solid $colors-line-lighter

  &__top
    padding-top 70px

  &__bottom
    position relative
    padding-top 32px
    border-top 1px solid #dee3e6
    position relative

  &-bottom
    display flex
    justify-content space-between
    align-items center
    flex-direction column
    flex-wrap wrap

    @media screen and (min-width: $screen-sm-min)
      flex-direction row
      &:first-of-type
        justify-content flex-start
        .npf-footer-bottom__item
          &:first-child
            margin-right 200px

    &__design
      margin-right 20px
      margin-bottom 30px

      @media screen and (min-width: $screen-sm-min)
        margin-bottom 0

    &__text
      opacity 0.7
      color $colors-text
      font-size 12px
      font-weight 400
      line-height (20/12)

      &:first-of-type
        margin-bottom 30px

    &__item
      font-size 12px
      color rgba(0,0,0,.5)
      line-height 2.5
      letter-spacing .02em
      margin-bottom 30px

      &._links
        display flex
        flex-direction column

        span
          margin-top 5px

        @media screen and (min-width: $screen-sm-min)
          flex-direction row

        @media screen and (min-width: $screen-lg-min)
          position absolute
          top 32px
          right 0


      &._social
        @media screen and (min-width: $screen-lg-min)
          position absolute
          right 0
          bottom 0


      span
        font-size 12px
        display inline-block
        vertical-align middle
        line-height 1

      img
        vertical-align middle


    &__year
      color #000
      font-size 14px

    &__social
      display inline-block
      width 32px
      height 32px
      vertical-align middle

      svg
        display block
        width 100%
        height 100%

@require './menu/menu.component.styl'
