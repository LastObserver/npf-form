    .right-angle
      display inline-block
      width 16px
      height 20px
      background-size contain
      background-repeat no-repeat
      background-position 50% 50%
      background-image url('data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHZpZXdCb3g9IjAgMCAyMCAyMCI+PHBhdGggZmlsbD0iIzFhOTkxYSIgZD0iTTcgMTcuMjVhMS4yNSAxLjI1IDAgMCAxLS44OC0yLjEzTDExLjIzIDEwIDYuMTIgNC44OGExLjI1IDEuMjUgMCAwIDEgMS43Ni0xLjc2TDE0Ljc3IDEwbC02Ljg5IDYuODhhMS4yNSAxLjI1IDAgMCAxLS44OC4zN3oiPjwvcGF0aD48L3N2Zz4=')

    .months-item
      position relative
      width 50%
      font-size 14px
      font-weight 200
      text-align center
      margin-bottom 5px
      margin-top 5px
      padding 0

      span
        position relative
        z-index 3
        display block
        padding 8px 10px

      &:nth-child(2n) span
        border-bottom-right-radius 15px
        border-top-right-radius 15px

      &:nth-child(2n+1) span
        border-bottom-left-radius 15px
        border-top-left-radius 15px

      &.in-range
        background none
        span
          background-color #f3f6f9

        & + .range-end:nth-child(2n)
          &:before
            content ''
            position absolute
            top 0
            bottom 0
            right 50%
            left -50%
            background-color #f3f6f9

      &.range-start
        background none
        span
          border-radius 15px
          background-color #1a991a

        & + .in-range:nth-child(2n)
          &:before
            content ''
            position absolute
            z-index 1
            left -50%
            right 50%
            top 0
            bottom 0
            background-color #f3f6f9

        & + .range-end:nth-child(2n)
          &:before
            content ''
            position absolute
            z-index 1
            left -50%
            right 50%
            top 0
            bottom 0
            background-color #1a991a

      &.range-end
        background none
        span
          border-radius 15px
          background-color #1a991a

    &.ltr .ranges
      float none

    .ranges
      margin-bottom 20px

    .range_inputs
      text-align center

    .applyBtn
    .cancelBtn
      display block
      background none
      border 2px solid #dfe2e5
      font-family inherit
      font-size 18px
      width 100%
      max-width 280px
      margin-left auto
      margin-right auto
      border-radius 30px
      padding 16px 10px 14px
      cursor pointer

      &:focus
        outline none

    .cancelBtn
      display none
      margin-top 10px

    .switcher-container
      position relative
      z-index 1
      max-width 270px
      margin-left auto
      margin-right auto
      margin-bottom -10px
      border-bottom 1px solid #dfe2e5

      &:after
        content ''
        display block
        clear both

      &:before
        content ''
        position absolute
        bottom -1px
        left 0
        right 50%
        height 4px
        border-top-left-radius 5px
        border-top-right-radius 5px
        background-color #ffa715
        transition .5s transform
        transform translateX(0)

      &.show-months
        &:before
          transform translateX(100%)

    .switcher-item
      float left
      width 50%
      text-align center
      padding 20px 15px
      font-size 18px
      font-weight 500
      cursor pointer
