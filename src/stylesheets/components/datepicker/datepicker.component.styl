.datepicker
  &::before,
  &::after
    display none
  padding 20px

.datepicker.dropdown-menu
  width 367px 
  background-color #fff
  border-radius 10px
  box-shadow 0 12px 40px rgba(0, 0, 0, 0.1)
  border none
  margin-top 10px
  
  @media (max-width: 479px)
    display none !important
    width 290px
    
  th
    padding 0
  td
    padding 0

.datepicker-days
  .prev,
  .next
    visibility hidden !important
    svg
      width 20px
      height 20px
  .datepicker-switch
    font-size 20px
    font-weight 500
    position relative
    padding-bottom 20px !important
    &:hover
      background-color transparent
    &::after
      content ''
      display block
      position absolute
      background-image url('data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHZpZXdCb3g9IjAgMCAxMiA3LjQiIGNsYXNzPSJpY19hcnJvd19kb3duIj48cGF0aCBmaWxsPScjMWE5OTFhJyBzdHJva2U9J25vbmUnIGQ9Ik0xLjQtLjA0TDYgNC4xNmw1LTQuMiAxIDEuNS02IDUuNy02LTUuN3oiLz48L3N2Zz4=')
      background-repeat no-repeat
      right 15px
      top 7px
      height 8px
      width 14px
      
      @media (max-width: 479px)
        right 10px
        
  thead
    tr:nth-child(2)
      border-bottom 1px solid $colors-line
    tr:nth-child(3)
      display none
  tbody
    font-size 14px
    font-weight 300
    td
      position relative
      padding 15px !important
      z-index 0
      
      @media (max-width: 479px)
        padding 10px !important
        
      &:hover
        color #fff !important
        background-color #fff !important
        &::after
          background-color $colors-ops
          border-radius 50%
          content ''
          position absolute
          left 50%
          top 50%
          transform translate(-50%,-50%)
          width 30px
          height 30px
          z-index -1
      &.active
        color #fff
        background-color #fff !important
        background-image none !important
        z-index 0
        &::after
          background-color $colors-ops
          border-radius 50%
          content ''
          position absolute
          left 50%
          top 50%
          transform translate(-50%,-50%)
          width 30px
          height 30px
          z-index -1

.datepicker-months
  width 100%
  
  table
    width 100%

.datepicker-years
  width 100%
  
  table
    width 100%
    
.datepicker-months,
.datepicker-years
  .prev,
  .next
    svg
      width 20px
      height 20px
  .datepicker-switch
    font-size 20px
    font-weight 500
    padding-bottom 20px !important
    position relative
    &:hover
      background-color transparent

  thead
    tr:nth-child(2)
      border-bottom 1px solid $colors-line
    tr:nth-child(3)
      display none
  tbody
    font-size 14px
    font-weight 300
    .month,
    .year
      display inline-block
      float none
      position relative
      padding 15px !important
      width 50%
      z-index 0
      margin 0
      height auto
      line-height 14px
      border-radius 0
      &:hover
      &.active
        color #fff !important
        background-color #fff !important
        background-image none !important
        &::after
          background-color $colors-ops
          border-radius 15px
          content ''
          position absolute
          left 50%
          top 50%
          transform translate(-50%,-50%)
          width 100%
          height 30px
          z-index -1
      &.focused
        color #fff
        background-color #fff !important
        background-image none !important
        z-index 0
        &::after
          background-color $colors-ops
          border-radius 15px
          content ''
          position absolute
          left 50%
          top 50%
          transform translate(-50%,-50%)
          width 100%
          height 30px
          z-index -1


.daterangepicker
  &._default
  &._datefilter
    width 320px
    margin-top 10px
    box-shadow: 0px 12px 40px 0px rgba(0, 0, 0, 0.1);

    &:before
      display none

    .calendar-header
      padding-top 15px
      padding-bottom 15px
      margin-bottom 15px
      border-bottom 1px solid #dfe2e5

    .week-header
      display none

    .calendar.one-mod.left
      max-width 320px
      margin-left auto
      margin-right auto

    .calendar-table
      padding 10px

    &.ltr .calendar.left .calendar-table
      padding-right 10px

    .week-row
      margin-bottom 10px
      margin-top 10px

    .month
    .year
      font-weight 500
      font-size 20px

    .day-item
      position relative
      padding 0

      &:first-child
        border-top-left-radius 15px
        border-bottom-left-radius 15px

      &:last-child
        border-top-right-radius 15px
        border-bottom-right-radius 15px

      span
        position relative
        display block
        padding 8px 5px
        z-index 3
        font-size 14px
        font-weight 200
        text-align center

      &.in-range
        background-color #f3f6f9

        & + .day-item.end-date
          &:after
            content ''
            position absolute
            left 0
            top 0
            bottom 0
            right 50%
            z-index 1
            background-color #f3f6f9


      &.start-date
        background none

        &:before
          content ''
          position absolute
          left 50%
          top 50%
          z-index 2
          width 30px
          height 30px
          border-radius 50%
          margin-top -15px
          margin-left -15px
          background-color #1a991a

        & + .day-item.in-range
          &:after
            content ''
            position absolute
            left -50%
            top 0
            bottom 0
            right 100%
            z-index 1
            background-color #f3f6f9

        & + .day-item.end-date
          &:after
            content ''
            position absolute
            left -50%
            top 0
            bottom 0
            right 50%
            z-index 1
            background-color #1a991a

      &.end-date
        background none

        &:before
          content ''
          position absolute
          left 50%
          top 50%
          z-index 2
          width 30px
          height 30px
          border-radius 50%
          margin-top -15px
          margin-left -15px
          background-color #1a991a

    .left-angle
      display inline-block
      width 16px
      height 20px
      background-size contain
      background-repeat no-repeat
      background-position 50% 50%
