h1
  font-size 34px
  font-weight 200
  line-height (44/34)

  @media screen and (min-width: $screen-sm-min)
    font-size 40px
    line-height (50/40)
    letter-spacing -.015em

h2
  font-size 20px
  font-weight 500
  line-height (30/20)
  letter-spacing -.015em

  @media screen and (min-width:$screen-sm-min)
    font-size 26px
    line-height (34/26)

h3
  font-size 16px
  font-weight 500
  line-height (26/16)

  @media screen and (min-width:$screen-sm-min)
    font-size 20px
    line-height (30/20)
    letter-spacing -.015em

b
  font-weight 700

p
  font-size 16px
  font-weight 300
  line-height (26/16)

  & + p
    margin-bottom 18px

  @media screen and (min-width: $screen-sm-min)
    font-size 18px
    line-height (30/18)
