.ngx-checkbox
  margin 32px 0
  text-align left
  position relative
  user-select none

  input
    position absolute
    width 1px
    height 1px
    left 12px
    top 15px
    opacity 0

  input:checked + &__content::after
    display block

  &__content
    display block
    padding-left 40px
    position relative
    cursor pointer
    {$typography-16}

    &::before
      content ''
      position absolute
      left 0
      top 3px
      border-radius 4px
      width 24px
      height 24px
      border 1px solid #cfd3d6

    &::after
      content ''
      display none
      position absolute
      top 15px
      left 12px
      width 12px
      height 12px
      border-radius 2px
      transform translate3d(-50%, -50%, 0)
      background colorForestGreen

      ~/_theme_corporate &
        background colorFunGreen

  &__error
  &__description
    {$typography-12}
    padding 2px 0 2px 40px
    font-weight 300

  &__error
    color colorWarning

  &__description
    color colorShuttleGray
    color rgba(colorShuttleGray, 2 / 3)

  a
    border-bottom 1px dashed

  &:first-child
    margin-top 0

  &:last-child
    margin-bottom 0
