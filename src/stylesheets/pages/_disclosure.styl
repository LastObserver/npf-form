$info = '.npf-info'

{$info}
  make-row()
  font-size 18px
  font-weight 300
  line-height 1.67

  li
    color #000
    font-size 16px
    font-weight 300
    line-height (26/16)
    margin-bottom 15px
    padding-left 30px
    position relative

    &::before
      content ''
      background-color $colors-ops
      display block
      width 10px
      height 4px
      border-radius 2px
      position absolute
      left 0
      top 14px
      transform translateY(-50%)

    @media screen and (min-width:$screen-sm-min)
      font-size 18px
      line-height (30/18)


  &-map
    position relative

    &__container
      height 300px

    @media screen and (min-width:$screen-lg-min)
      .npf-container
        position absolute
        left 0
        right 0
        top 0


  &__row
    display flex
    margin-left -15px
    margin-right -15px
    flex-direction column
    flex-wrap wrap

    &:not(:last-of-type)
      margin-bottom 15px

    @media screen and (min-width:$screen-sm-min)
      flex-direction row
      margin-bottom 30px


    &:last-child
      margin-bottom 0

  &__col
    width 100%
    padding-left 15px
    padding-right 15px

    &:not(:last-of-type)
      margin-bottom 15px

    @media screen and (min-width:$screen-sm-min)
      margin-bottom 0
      width 50%

  &__container
    make-lg-column(8)
    make-lg-column-offset(2)

  &__block
    text-align center

    a
      text-decoration underline
      &:hover
        text-decoration none

    h1
      @media screen and (max-width:$screen-xs-max)
        font-size 30px
    h1,
    h2,
    h3
      margin-bottom 30px

    @media screen and (min-width: $screen-sm-min)
      text-align left

    &._theme_disclosure
      text-align left

  &__greeting
    display flex
    flex-direction column
    flex-wrap wrap

    @media screen and (min-width:$screen-sm-min)
      flex-direction row

  &__greeting-left

    @media screen and (min-width:$screen-sm-min)
      width percentage(5/8)

  &__greeting-right
    display flex
    align-items center

    @media screen and (min-width:$screen-sm-min)
      width percentage(3/8)

  &__name
    color #000
    font-weight 300
    display inline-block

    @media screen and (max-width:$screen-xs-max)
      padding-bottom 20px

  &__file-link
    display flex

  &__file-icon
    display inline-block
    height 40px
    margin-right 10px
    vertical-align middle
    width 28px
    flex-basis 28px
    flex-shrink 0
    float left
    svg
      fill $colors-ops
      stroke $colors-ops


  &__text-file
    display inline-block
    vertical-align middle
    font-size 16px
    font-weight 400
    float left
    line-height (28/16)



  &__list
    display flex
    flex-direction column
    flex-wrap wrap

    @media screen and (min-width: $screen-sm-min)
      flex-direction row

    ul
      text-align left
      width 100%

      @media screen and (min-width: $screen-sm-min)
        width 50%

  &-contacts
    box-shadow 0 20px 81px rgba(0, 0, 0, 0.15)
    background-color #fff
    padding-left 20px
    padding-right 20px
    padding-bottom 40px
    border-radius 0 0 10px 10px

    @media screen and (min-width:$screen-lg-min)
      position absolute
      top -30px
      right 0
      width 470px
      height 360px
      padding-left 60px
      padding-top 35px
      border-radius 10px

    &__block
      padding-top 15px
      padding-bottom 15px

    &__title
      opacity 0.5
      color #000
      font-size 12px
      text-transform uppercase
      letter-spacing .1em

    &__text
      font-size 16px
      font-weight 300
      line-height (26/16)

      @media screen and (min-width:$screen-sm-min)
        font-size 18px
        line-height (30/18)

      &._phone-number
        font-size 20px

        @media screen and (min-width:$screen-sm-min)
          font-size 24px

  &__details
    box-shadow 0 20px 81px rgba(0, 0, 0, 0.15)
    border-radius 10px
    background-color #fff
    position relative
    min-height 235px
    overflow hidden
    padding 15px 20px

    @media screen and (min-width:$screen-sm-min)
      padding-top 15px
      padding-bottom 40px


    &-actions
      position absolute
      right 20px
      top 20px
      a
        padding-left 10px
        padding-right 10px
        display inline-block
        vertical-align top
      svg
        overflow visible

    &-options
      svg
        stroke $colors-ops

    &-download,
    &-print
      svg
        width 25px
        stroke none
        fill $colors-line-lighter

    &-row
      display flex
      flex-direction column
      flex-wrap wrap
      padding-bottom 15px
      padding-top 15px

      @media screen and (min-width:$screen-sm-min)
        flex-direction row


    &-col-left

      @media screen and (min-width:$screen-sm-min)
        width percentage( 3/8 )
        padding-left 60px

    &-col-right
      padding-right 60px
      width percentage( 5/8 )

    &-full-col
      padding-left 60px
      padding-right 60px
      width 100%

  &-purchase
    height 100%
    background-repeat no-repeat
    background-position left bottom
    padding-top 34px
    padding-left 30px
    padding-right 30px
    position relative
    overflow hidden
    &::after
      background-color $colors-text
      display block
      content ''
      opacity .05
      width 2px
      height 100%
      top 0
      left 10px
      position absolute
    &:hover
      background $colors-ops-lighter !important
      color #fff
      border-radius 6px
      {$info}
        &-purchase
          &::after
            display none
          &__subtitle
            color #fff

    &__title
      font-size 20px
      line-height (30/20)
      font-weight 500
      margin-bottom 15px

    &__subtitle
      color #000
      font-size 12px
      line-height 1
      text-transform uppercase

    &__date
      color #fff
      font-size 12px
      font-weight 500
      line-height (50/12)
      text-transform uppercase
      position absolute
      left 30px
      bottom 0

    &__download
      position absolute
      right 10px
      bottom 10px
      padding 10px

    &__download-icon
      height 20px
      width 20px

      svg
        overflow hidden
        fill #fff

  .npf-news-item
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.1)
